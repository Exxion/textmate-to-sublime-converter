<project basedir="." default="all" name="Textmate bundle to Sublime Text package transformer">
	<include file="../tm2subl.xml" />
	
	<target name="all">
		<tm2subl destdir="Sublime Text" srcdir="TextMate" snippet-transformer="../tm2subl.xsl" />
	</target>
	
	<target name="snippetsonly">
		<tm2subl-snippet destdir="Sublime Text" flatten="true" convert-to-tabs="true" transformer="../tm2subl.xsl">
			<fileset dir="TextMate" includes="**/*.tmSnippet" />
		</tm2subl-snippet>
	</target>
</project>
